<div class="container">
  <h1 class="mt-4 mb-3"><%= @task.title %></h1>
  <p class="border p-3 d-flex bg-light rounded"><%= @task.details %></p>
  <% if @task.completed %>
    <p><i class="far fa-check-square"></i> This task is completed!</p>
  <% else %>
    <p><i class="far fa-square"></i> This task is not completed yet!</p>
  <% end %>
  <%= link_to 'Edit the task', edit_task_path(@task), class: "btn btn-primary mb-3"%>
  <%= link_to tasks_path do%>
    <p><i class="fas fa-undo-alt"></i> Back to list</p>
  <% end %>
</div>
